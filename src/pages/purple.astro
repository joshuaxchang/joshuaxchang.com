---
import Layout from '../layouts/Layout.astro';
---

<style is:global>
  /*
    This rule targets the body tag only when it has the 'bg-brand-bg' class.
    This makes the selector more specific than the global Tailwind utility,
    allowing this page to override the background color without `!important`.
  */
  body.bg-brand-bg {
    background-color: #E6E6FA; /* Lavender */
  }
</style>

<Layout title="紫">
  <main class="max-w-xl mx-auto px-4 py-16 text-center">
    <div class="prose lg:prose-xl mx-auto">
      <h1 class="text-4xl font-bold mb-4">紫</h1>
    </div>
  </main>
</Layout>