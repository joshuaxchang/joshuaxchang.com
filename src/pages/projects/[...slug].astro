---
// src/pages/projects/[...slug].astro
// This is the template for a single project page.

import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project }, // Pass the full project entry as a prop
  }));
}

// Get the project from Astro.props
const { project } = Astro.props;

const { Content } = await project.render();
---

<Layout title={project.data.title}>
  <main class="max-w-4xl mx-auto px-4 py-12">
    <div class="mb-8">
        <a href="/#projects" class="text-brand-primary font-semibold hover:underline">
            &larr;
            Back to projects
        </a>
    </div>
    <article class="prose lg:prose-xl max-w-none">
      <h1 class="font-heading text-4xl font-bold mb-4 text-brand-text">{project.data.title}</h1>
      
      {project.data.pubDate && (
        <p class="text-gray-500 italic mb-8">
          {project.data.pubDate.toLocaleString('en-us', { month: 'long', year: 'numeric' })}
        </p>
      )}

      <Content components={{ img: Image }} />
  
    </article>
  </main>
</Layout>