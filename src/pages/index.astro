---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

// Import your headshot image
import headshot from '../assets/headshot.jpg'; 

const projects = await getCollection('projects');
projects.sort((a, b) => {
    if (a.data.pubDate && b.data.pubDate) {
        return b.data.pubDate.valueOf() - a.data.pubDate.valueOf();
    }
    return 0;
});
---
<Layout title="Joshua Chang | Designer & Developer">
  <main>
    <!-- Hero Section -->
    <section class="py-24 px-4 bg-gradient-to-b from-green-50 to-brand-bg">
      <div class="max-w-5xl mx-auto flex flex-col md:flex-row items-center justify-center gap-12">
        
        <!-- Headshot Image (Made Larger) -->
        <div class="flex-shrink-0">
          <Image 
            src={headshot} 
            alt="A headshot of Joshua Chang" 
            class="rounded-full w-64 h-64 object-cover border-4 border-white shadow-lg"
          />
        </div>

        <!-- Text Content -->
        <div class="text-center md:text-left">
          <h1 class="font-heading text-5xl md:text-6xl font-bold mb-2 text-brand-text">Joshua Chang</h1>
          <p class="font-serif italic text-2xl font-medium text-gray-500 mb-6">
            Building to learn. Learning to build
          </p>
          <p class="text-lg text-gray-700 max-w-xl">
            Hello world!
          </p>
        </div>

      </div>
    </section>

    <!-- All Projects Section -->
    <section id="projects" class="py-16">
      <div class="max-w-5xl mx-auto px-4">
        <h2 class="font-heading text-4xl font-bold mb-12 text-center text-brand-primary">Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {projects.map((project) => (
            <a 
              href={`/projects/${project.slug}`} 
              class="group block bg-white rounded-lg shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden transform hover:-translate-y-2"
            >
              {project.data.thumbnail && (
                <div class="overflow-hidden">
                  <Image 
                    src={project.data.thumbnail} 
                    alt={`thumbnail for ${project.data.title}`}
                    width={500} 
                    height={300}
                    format="webp"
                    class="w-full h-56 object-cover group-hover:scale-105 transition-transform duration-300" 
                  />
                </div>
              )}
              <div class="p-6">
                <h3 class="font-heading text-2xl font-bold mb-2 text-brand-text">{project.data.title}</h3>
                <p class="text-gray-600 mb-4">{project.data.description}</p>
                <span class="text-brand-accent font-semibold group-hover:underline">Read More &rarr;</span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>
