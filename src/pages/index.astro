---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

// Import your headshot image
import headshot from '../assets/headshot.jpg'; 

const projects = await getCollection('projects');
projects.sort((a, b) => {
    if (a.data.pubDate && b.data.pubDate) {
        return b.data.pubDate.valueOf() - a.data.pubDate.valueOf();
    }
    return 0;
});
---
<Layout title="Joshua Chang | Portfolio">
  <main>
    <!-- Hero Section -->
    <section class="py-24 px-4 bg-gradient-to-b from-brand-primary/30 to-brand-bg">
      <div class="max-w-5xl mx-auto flex flex-col md:flex-row items-center justify-center gap-12">
        
        <!-- Headshot Image (Made Larger) -->
        <div class="flex-shrink-0">
          <Image 
            src={headshot} 
            alt="A headshot" 
            class="rounded-full w-64 h-64 object-cover border-4 border-white shadow-lg"
            loading="eager"
          />
        </div>

        <!-- Text Content -->
        <div class="text-center md:text-left">
          <h1 class="font-heading text-5xl md:text-6xl font-bold mb-2 text-brand-text">Joshua Chang</h1>
          <p class="font-serif italic text-2xl font-medium text-gray-500 mb-6">
            Building to learn. Learning to build
          </p>
          <p class="text-lg text-gray-700 max-w-xl">
            I am an engineer and medical student who enjoys the process of solving problems, whether in the workshop or in the clinic.
          </p>
        </div>

      </div>
    </section>

    <!-- All Projects Section -->
    <section id="projects" class="py-16">
      <div class="max-w-5xl mx-auto px-4">
        <h2 class="font-heading text-4xl font-bold mb-12 text-center text-brand-primary">Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {projects.map((project) => (
            <a 
              href={`/projects/${project.slug}`} 
              class="group block bg-brand-card rounded-lg shadow-card hover:shadow-card-hover transition-all duration-300 overflow-hidden transform hover:-translate-y-2"
            >
              {project.data.thumbnail ? (
                // If a thumbnail exists, render the Image
                <div class="overflow-hidden">
                  <Image 
                    src={project.data.thumbnail} 
                    alt={`thumbnail for ${project.data.title}`}
                    width={500} 
                    height={300}
                    format="webp"
                    class="w-full h-56 object-cover group-hover:scale-105 transition-transform duration-300" 
                  />
                </div>
              ) : (
                // Otherwise, render a placeholder div
                <div class="w-full h-56 bg-brand-bg flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
              )}
              <div class="p-6">
                <div class="flex justify-between items-baseline mb-2">
                  <h3 class="font-heading text-2xl font-bold text-brand-text">{project.data.title}</h3>
                  {project.data.pubDate && (
                    <p class="text-sm font-medium text-gray-500">
                      {project.data.pubDate.getFullYear()}
                    </p>
                  )}
                </div>
                <p class="text-gray-600 mb-4">{project.data.description}</p>
                <span class="text-brand-accent font-semibold group-hover:underline">Read More &rarr;</span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>
