---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

import headshot from "../assets/headshot.jpg";
import camphoraStudioThumbnail from "../assets/camphora-studio-thumbnail.jpeg";

const projects = await getCollection("projects");
projects.sort((a, b) => {
  if (a.data.pubDate && b.data.pubDate) {
    return b.data.pubDate.valueOf() - a.data.pubDate.valueOf();
  }
  return 0;
});
---

<Layout title="Joshua Chang | Portfolio">
  <main>
    <!-- Hero Section -->
    <section
      class="py-20 px-4 bg-gradient-to-b from-brand-primary/20 to-brand-bg"
    >
      <div
        class="max-w-5xl mx-auto flex flex-col md:flex-row items-center justify-center gap-12"
      >
        <!-- Headshot Image (Made Larger) -->
        <div class="flex-shrink-0">
          <Image
            src={headshot}
            alt="A headshot"
            class="rounded-full w-64 h-64 object-cover border-4 border-brand-accent-light shadow-lg"
            loading="eager"
          />
        </div>

        <!-- Text Content -->
        <div class="text-center md:text-left">
          <div class="flex items-baseline flex-wrap gap-x-4 gap-y-2">
            <h1
              class="font-heading text-3xl md:text-4xl font-bold text-brand-text"
            >
              Joshua Chang
            </h1>

            <div
              class="chinese-name text-3xl md:text-4xl font-bold text-brand-text"
            >
              <ruby>張<rt>Chang</rt></ruby>
              <ruby>先<rt>Xian</rt></ruby>
              <ruby>恕<rt>Shu</rt></ruby>
            </div>
          </div>
          <p class="font-serif italic text-2xl font-medium text-gray-500 mb-4">
            Building to learn. Learning to build
          </p>
          <div class="text-lg text-brand-text max-w-xl space-y-2">
            <p>Hi, thanks for visiting!</p>
            <p>
              This site showcases my work, with a design inspired by the Joshua
              tree and its desert landscape. The tree’s name has a nice
              connection to mine: Joshua, and Shu (恕), which sounds like “tree”
              (樹) in Chinese. The code for this website can be <a
                href="https://github.com/joshuaxchang/joshuaxchang.com"
                class="text-brand-text-green font-semibold hover:underline"
                >viewed here.</a
              >
            </p>
            <!-- ``
            <p>
              <a href="/cv.pdf" class="text-brand-primary font-semibold hover:underline">My CV</a> outlines the path I've taken so far.
            </p>
            -->
          </div>
        </div>
      </div>
    </section>

    <!-- All Projects Section -->
    <section id="projects" class="py-5">
      <div class="max-w-5xl mx-auto px-4">
        <h2
          class="font-heading text-4xl font-bold mb-12 text-center text-brand-primary"
        >
          Projects
        </h2>
        <div class="max-w-3xl mx-auto mb-16">
          <a
            href="/camphora"
            class="group block bg-brand-card rounded-lg shadow-card hover:shadow-card-hover transition-all duration-300 transform hover:-translate-y-2 overflow-hidden md:grid md:grid-cols-5 md:h-80"
          >
            <div class="relative md:col-span-3 h-56 md:h-auto">
              <Image
                src={camphoraStudioThumbnail}
                alt="Camphora Studio"
                class="absolute w-full h-full object-cover transition-transform duration-300"
              />
            </div>

            <div class="md:col-span-2 p-8 flex flex-col justify-center">
              <h3 class="font-heading text-2xl font-bold text-brand-text mb-2">
                Camphora Studio
              </h3>
              <p class="text-gray-600 mb-4">
                A Quest to Create the Best Air Quality Monitor and Air Purifier
              </p>
              <span
                class="text-brand-text-green font-semibold group-hover:underline mt-auto"
                >Read More &rarr;</span
              >
            </div>
          </a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {
            projects.map((project) => (
              <a
                href={`/projects/${project.slug}`}
                class="group block bg-brand-card rounded-lg shadow-card hover:shadow-card-hover transition-all duration-300 overflow-hidden transform hover:-translate-y-2"
              >
                {project.data.thumbnail ? (
                  // If a thumbnail exists, render the Image
                  <div class="overflow-hidden">
                    <Image
                      src={project.data.thumbnail}
                      alt={`thumbnail for ${project.data.title}`}
                      width={500}
                      height={300}
                      format="webp"
                      class="w-full h-56 object-cover transition-transform duration-300"
                    />
                  </div>
                ) : (
                  // Otherwise, render a placeholder div
                  <div class="w-full h-56 bg-brand-bg flex items-center justify-center">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-12 h-12 text-gray-300"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                      />
                    </svg>
                  </div>
                )}
                <div class="p-6">
                  <div class="flex justify-between items-baseline mb-2">
                    <h3 class="font-heading text-2xl font-bold text-brand-text">
                      {project.data.title}
                    </h3>
                    {project.data.pubDate && (
                      <p class="text-sm font-medium text-gray-500">
                        {project.data.pubDate.getFullYear()}
                      </p>
                    )}
                  </div>
                  <p class="text-gray-600 mb-4">{project.data.description}</p>
                  <span class="text-brand-text-green font-semibold group-hover:underline">
                    Read More &rarr;
                  </span>
                </div>
              </a>
            ))
          }
        </div>
      </div>
    </section>
  </main>
</Layout>
